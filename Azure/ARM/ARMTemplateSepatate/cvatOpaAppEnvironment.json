{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerapps_opa_name": {
            "defaultValue": "opa",
            "type": "String"
        },
        "managedEnvironments_cvat_test_env_externalid": {
            "defaultValue": "/subscriptions/bb79d671-6949-4663-854e-14424d667454/resourceGroups/cvat-prod-rg/providers/Microsoft.App/managedEnvironments/cvat-test-env",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.App/containerapps",
            "apiVersion": "2025-02-02-preview",
            "name": "[parameters('containerapps_opa_name')]",
            "location": "Southeast Asia",
            "kind": "containerapps",
            "identity": {
                "type": "None"
            },
            "properties": {
                "managedEnvironmentId": "[parameters('managedEnvironments_cvat_test_env_externalid')]",
                "environmentId": "[parameters('managedEnvironments_cvat_test_env_externalid')]",
                "workloadProfileName": "Consumption",
                "configuration": {
                    "activeRevisionsMode": "Single",
                    "ingress": {
                        "external": false,
                        "targetPort": 8181,
                        "exposedPort": 8181,
                        "transport": "Tcp",
                        "traffic": [
                            {
                                "weight": 100,
                                "latestRevision": true
                            }
                        ],
                        "allowInsecure": false,
                        "stickySessions": {
                            "affinity": "none"
                        }
                    },
                    "identitySettings": [],
                    "maxInactiveRevisions": 100
                },
                "template": {
                    "containers": [
                        {
                            "image": "[concat('docker.io/openpolicyagent/', parameters('containerapps_opa_name'), ':0.63.0')]",
                            "imageType": "ContainerImage",
                            "name": "[parameters('containerapps_opa_name')]",
                            "args": [
                                "run",
                                "--server",
                                "--log-level=error",
                                "--set=services.cvat.url=http://cvat-server:8080",
                                "--set=bundles.cvat.service=cvat",
                                "--set=bundles.cvat.resource=/api/auth/rules",
                                "--set=bundles.cvat.polling.min_delay_seconds=5",
                                "--set=bundles.cvat.polling.max_delay_seconds=15"
                            ],
                            "resources": {
                                "cpu": 0.25,
                                "memory": "0.5Gi"
                            },
                            "probes": []
                        }
                    ],
                    "scale": {
                        "minReplicas": 1,
                        "maxReplicas": 1,
                        "cooldownPeriod": 300,
                        "pollingInterval": 30
                    },
                    "volumes": []
                }
            }
        }
    ]
}