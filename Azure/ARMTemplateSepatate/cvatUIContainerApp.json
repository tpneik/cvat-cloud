{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerapps_cvat_ui_name": {
            "defaultValue": "cvat-ui",
            "type": "String"
        },
        "managedEnvironments_cvat_app_cae_externalid": {
            "defaultValue": "/subscriptions/bb79d671-6949-4663-854e-14424d667454/resourceGroups/cvat-prod-rg/providers/Microsoft.App/managedEnvironments/cvat-app-cae",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.App/containerapps",
            "apiVersion": "2025-02-02-preview",
            "name": "[parameters('containerapps_cvat_ui_name')]",
            "location": "Southeast Asia",
            "kind": "containerapps",
            "identity": {
                "type": "None"
            },
            "properties": {
                "managedEnvironmentId": "[parameters('managedEnvironments_cvat_app_cae_externalid')]",
                "environmentId": "[parameters('managedEnvironments_cvat_app_cae_externalid')]",
                "workloadProfileName": "Consumption",
                "configuration": {
                    "activeRevisionsMode": "Single",
                    "ingress": {
                        "external": true,
                        "targetPort": 8000,
                        "exposedPort": 0,
                        "transport": "Auto",
                        "traffic": [
                            {
                                "weight": 100,
                                "latestRevision": true
                            }
                        ],
                        "allowInsecure": false,
                        "clientCertificateMode": "Ignore",
                        "stickySessions": {
                            "affinity": "none"
                        }
                    },
                    "identitySettings": [],
                    "maxInactiveRevisions": 100
                },
                "template": {
                    "containers": [
                        {
                            "image": "docker.io/cvat/ui:dev",
                            "imageType": "ContainerImage",
                            "name": "[parameters('containerapps_cvat_ui_name')]",
                            "resources": {
                                "cpu": 0.25,
                                "memory": "0.5Gi"
                            }
                        }
                    ],
                    "scale": {
                        "minReplicas": 1,
                        "maxReplicas": 1,
                        "cooldownPeriod": 300,
                        "pollingInterval": 30,
                        "rules": [
                            {
                                "name": "http-scaler",
                                "http": {
                                    "metadata": {
                                        "concurrentRequests": "10"
                                    }
                                }
                            }
                        ]
                    }
                }
            }
        }
    ]
}