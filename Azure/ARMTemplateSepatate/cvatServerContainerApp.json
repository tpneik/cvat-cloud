{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "containerapps_cvat_server_name": {
            "defaultValue": "cvat-server",
            "type": "String"
        },
        "managedEnvironments_cvat_test_env_externalid": {
            "defaultValue": "/subscriptions/bb79d671-6949-4663-854e-14424d667454/resourceGroups/cvat-prod-rg/providers/Microsoft.App/managedEnvironments/cvat-test-env",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.App/containerapps",
            "apiVersion": "2025-02-02-preview",
            "name": "[parameters('containerapps_cvat_server_name')]",
            "location": "Southeast Asia",
            "kind": "containerapps",
            "identity": {
                "type": "None"
            },
            "properties": {
                "managedEnvironmentId": "[parameters('managedEnvironments_cvat_test_env_externalid')]",
                "environmentId": "[parameters('managedEnvironments_cvat_test_env_externalid')]",
                "workloadProfileName": "Consumption",
                "configuration": {
                    "secrets": [
                        {
                            "name": "redis-inmem-key"
                        },
                        {
                            "name": "postgre-key"
                        }
                    ],
                    "activeRevisionsMode": "Single",
                    "ingress": {
                        "external": false,
                        "targetPort": 8080,
                        "exposedPort": 8080,
                        "transport": "Tcp",
                        "traffic": [
                            {
                                "weight": 100,
                                "latestRevision": true
                            }
                        ],
                        "allowInsecure": false,
                        "stickySessions": {
                            "affinity": "none"
                        }
                    },
                    "identitySettings": [],
                    "maxInactiveRevisions": 100
                },
                "template": {
                    "containers": [
                        {
                            "image": "docker.io/cvat/server:dev",
                            "imageType": "ContainerImage",
                            "name": "[parameters('containerapps_cvat_server_name')]",
                            "args": [
                                "init",
                                "run",
                                "server"
                            ],
                            "env": [
                                {
                                    "name": "CVAT_POSTGRES_HOST",
                                    "value": "cvat-db.postgres.database.azure.com"
                                },
                                {
                                    "name": "CVAT_POSTGRES_PORT",
                                    "value": "5432"
                                },
                                {
                                    "name": "CVAT_POSTGRES_USER",
                                    "value": "cvatAdmin"
                                },
                                {
                                    "name": "CVAT_POSTGRES_DBNAME",
                                    "value": "cvat"
                                },
                                {
                                    "name": "CVAT_REDIS_INMEM_HOST",
                                    "value": "cvat-redis-inmem"
                                },
                                {
                                    "name": "CVAT_REDIS_INMEM_PORT",
                                    "value": "6379"
                                },
                                {
                                    "name": "CVAT_REDIS_ONDISK_HOST",
                                    "value": "cvat-redis-ondisk"
                                },
                                {
                                    "name": "CVAT_REDIS_ONDISK_PORT",
                                    "value": "6666"
                                },
                                {
                                    "name": "CVAT_POSTGRES_PASSWORD",
                                    "secretRef": "postgre-key"
                                },
                                {
                                    "name": "CVAT_LOG_IMPORT_ERRORS",
                                    "value": "true"
                                },
                                {
                                    "name": "DJANGO_LOG_SERVER_HOST",
                                    "value": "cvat-vector"
                                },
                                {
                                    "name": "DJANGO_LOG_SERVER_PORT",
                                    "value": "8282"
                                },
                                {
                                    "name": "CLICKHOUSE_HOST",
                                    "value": "cvat-clickhouse"
                                },
                                {
                                    "name": "CLICKHOUSE_PORT",
                                    "value": "8123"
                                },
                                {
                                    "name": "CLICKHOUSE_DB",
                                    "value": "cvat"
                                },
                                {
                                    "name": "CLICKHOUSE_USER",
                                    "value": "user"
                                },
                                {
                                    "name": "CLICKHOUSE_PASSWORD",
                                    "value": "user"
                                },
                                {
                                    "name": "SMOKESCREEN_OPTS",
                                    "value": "${SMOKESCREEN_OPTS:-}"
                                },
                                {
                                    "name": "ALLOWED_HOSTS",
                                    "value": "[parameters('containerapps_cvat_server_name')]"
                                }
                            ],
                            "resources": {
                                "cpu": 0.5,
                                "memory": "1Gi"
                            },
                            "probes": []
                        }
                    ],
                    "scale": {
                        "minReplicas": 1,
                        "maxReplicas": 1,
                        "cooldownPeriod": 300,
                        "pollingInterval": 30,
                        "rules": [
                            {
                                "name": "http-scaler",
                                "http": {
                                    "metadata": {
                                        "concurrentRequests": "10"
                                    }
                                }
                            }
                        ]
                    },
                    "volumes": []
                }
            }
        }
    ]
}